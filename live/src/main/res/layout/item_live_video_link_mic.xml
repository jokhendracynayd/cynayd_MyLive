<?xml version="1.0" encoding="utf-8"?>
<com.livestreaming.common.custom.MyFrameLayout2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:layout_width="120dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:id="@+id/cover_avatar"
        android:src="@mipmap/ic_avatar_test"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <LinearLayout
        android:id="@+id/view_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4d000000"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_live_voice_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_38"
            android:textColor="#E0E0E0"
            android:textSize="12dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/face"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_chat_room_video_name"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:singleLine="true"
        android:textColor="#707070"
        android:textSize="12dp"
        tools:text="啊啊啊啊"
        android:visibility="invisible"
        tools:visibility="visible"
        />
    <LinearLayout
        android:id="@+id/votes_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        >
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/reward"
            android:layout_marginHorizontal="2dp"
            />

        <TextView
            android:id="@+id/votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxLength="10"
            android:textColor="@color/white"
            android:textSize="11sp"
            tools:text="10" />
    </LinearLayout>


    <ImageView
        android:id="@+id/img_mute"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        tools:src="@mipmap/ic_live_voice_5"
        android:visibility="invisible"
        tools:visibility="visible" />
</com.livestreaming.common.custom.MyFrameLayout2>