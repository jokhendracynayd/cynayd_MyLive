<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layoutDirection="ltr">

    <LinearLayout
        android:id="@+id/asd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_toStartOf="@id/btn"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="16dp"
            >

            <ImageView
                android:id="@+id/btn_mic_apply"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@mipmap/icon_live_mai_2"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/btn_mic_control"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@mipmap/icon_live_mai"

                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_games"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp" />
    </LinearLayout>

    <View
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/asd"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/btn_gift"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/asd"
        android:layout_marginEnd="5dp"

        android:layout_toStartOf="@id/btn" />


    <ImageView
        android:id="@+id/btn_function"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/asd"
        android:layout_alignBottom="@+id/btn_gift"
        android:layout_toStartOf="@id/btn_gift"
        android:padding="5dp"
        android:src="@mipmap/icon_live_func" />

    <ImageView
        android:id="@+id/btn_msg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/asd"
        android:layout_toStartOf="@id/btn_function"
        android:padding="5dp"

        android:src="@mipmap/icon_live_msg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/group_mic"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/asd"
        android:layout_alignBottom="@+id/btn_gift"
        android:layout_toStartOf="@id/btn_function"
        android:gravity="center"
        android:orientation="horizontal"

        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/btn_mic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/icon_live_mic_open" />

        <ImageView
            android:id="@+id/btn_face"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/icon_live_voice_face"

            android:visibility="gone"

            />

    </LinearLayout>


    <ImageView
        android:id="@+id/btn_join"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/asd"
        android:layout_alignBottom="@+id/btn_gift"

        android:layout_toStartOf="@id/group_mic"
        android:padding="5dp"

        android:src="@mipmap/icon_live_voice_join_1" />

    <ImageView
        android:id="@+id/btn_first_charge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/asd"
        android:layout_alignBottom="@+id/btn_gift"

        android:layout_toStartOf="@id/btn_join"
        android:padding="5dp"
        android:src="@drawable/icon_live_first_charge" />

    <ImageView
        android:id="@+id/btn_game"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_below="@id/asd"
        android:layout_alignBottom="@+id/btn_gift"
        android:layout_toStartOf="@id/btn_first_charge"

        android:padding="5dp"
        android:src="@mipmap/icon_live_game" />

    <ImageView
        android:id="@+id/btn_switch_cam"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/asd"
        android:layout_toStartOf="@id/btn_game"
        android:padding="5dp"
        android:src="@mipmap/icon_video_camera"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/btn_chat"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/asd"
        android:layout_marginStart="5dp"

        android:layout_marginTop="5dp"
        android:background="@drawable/bg_btn_live_chat">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:src="@mipmap/icon_live_send_0"
            />
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="2dp"
            android:padding="3dp"
            android:src="@mipmap/icon_live_chat_face" />
    </LinearLayout>


    <TextView
        android:id="@+id/red_point"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignTop="@id/btn_function"
        android:layout_alignEnd="@id/btn_function"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_red_point"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="14dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="1"
        android:textColor="#fff"
        android:textSize="10dp"
        android:translationY="-4dp"
        android:visibility="invisible" />


</RelativeLayout>