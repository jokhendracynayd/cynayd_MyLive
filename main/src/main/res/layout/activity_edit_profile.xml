<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <include
        android:id="@+id/title_view"
        layout="@layout/view_title"/>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/btn_avatar"
        style="@style/edit_profile_group"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/edit_profile_avatar"
            android:textColor="@color/gray3"
            android:textSize="16sp"
            />


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right"
            />

    </RelativeLayout>

    <View
        style="@style/line2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <RelativeLayout
        android:id="@+id/btn_name"
        style="@style/edit_profile_group"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/edit_profile_nickname"
            android:textColor="@color/gray3"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="25dp"
            android:ellipsize="end"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right"
            />
    </RelativeLayout>


    <View
        style="@style/line2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <RelativeLayout
        android:id="@+id/btn_sex"
        style="@style/edit_profile_group"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/edit_profile_sex"
            android:textColor="@color/gray3"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right"
            />

    </RelativeLayout>


    <View
        style="@style/line2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <RelativeLayout
        android:id="@+id/btn_birthday"
        style="@style/edit_profile_group"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/edit_profile_birthday"
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@+id/textView2"
            android:ellipsize="end"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right"
            />
    </RelativeLayout>


    <View
        style="@style/line2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <RelativeLayout
        android:id="@+id/btn_city"
        style="@style/edit_profile_group"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/edit_profile_city"
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@+id/textView"
            android:ellipsize="end"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right"
            />
    </RelativeLayout>

    <View
        style="@style/line2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <RelativeLayout
        android:id="@+id/btn_sign"
        style="@style/edit_profile_group"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/edit_profile_sign"
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@+id/textView3"
            android:ellipsize="end"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right"
            />
    </RelativeLayout>

    <View
        style="@style/line2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />
    <TextView
        android:id="@+id/done_first_editing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:gravity="center"
        android:background="@drawable/login_btn"
        android:paddingVertical="6dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="24dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        />
</LinearLayout>