<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:background="#0f0">

    <ImageView
        android:id="@+id/img_123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/bg_list_rank" />

    <FrameLayout
        android:id="@+id/item_1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/data_group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar_1"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                tools:src="@mipmap/ic_avatar_test" />

            <ImageView
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_main_list_head_1"
                android:translationY="-4dp" />


            <TextView
                android:id="@+id/name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatar_1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:text="啊啊啊啊" />

            <TextView
                android:id="@+id/votes_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_1"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="12dp"
                tools:text="999999" />

            <com.livestreaming.common.custom.MyRadioButton
                android:id="@+id/btn_follow_1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/votes_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_btn_follow_2"
                android:button="@null"
                android:gravity="center"
                android:minWidth="44dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/fg_btn_follow_2"
                android:textSize="11dp"
                tools:text="关注" />
        </RelativeLayout>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/item_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/item_1"
        android:translationX="5dp"
        android:translationY="55dp">

        <RelativeLayout
            android:id="@+id/data_group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar_2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                tools:src="@mipmap/ic_avatar_test" />

            <ImageView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_main_list_head_2"
                android:translationY="-6dp" />

            <TextView
                android:id="@+id/name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatar_2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:text="啊啊啊啊啊" />

            <TextView
                android:id="@+id/votes_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_2"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="12dp"
                tools:text="9999999" />

            <com.livestreaming.common.custom.MyRadioButton
                android:id="@+id/btn_follow_2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/votes_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_btn_follow_2"
                android:button="@null"
                android:gravity="center"
                android:minWidth="44dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/fg_btn_follow_2"
                android:textSize="11dp"
                tools:text="关注" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/no_data_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="invisible">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="11dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_main_list_no_data"
                app:riv_oval="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/main_list_no_data_2"
                android:textColor="@color/white"
                android:textSize="14dp" />


        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/item_3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_1"
        android:translationX="-5dp"
        android:translationY="75dp">

        <RelativeLayout
            android:id="@+id/data_group_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar_3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                tools:src="@mipmap/ic_avatar_test" />

            <ImageView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_main_list_head_3"
                android:translationY="-6dp" />


            <TextView
                android:id="@+id/name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatar_3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:text="啊啊啊啊啊" />

            <TextView
                android:id="@+id/votes_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_3"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="12dp"
                tools:text="9999999" />

            <com.livestreaming.common.custom.MyRadioButton
                android:id="@+id/btn_follow_3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/votes_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_btn_follow_2"
                android:button="@null"
                android:gravity="center"
                android:minWidth="44dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/fg_btn_follow_2"
                android:textSize="11dp"
                tools:text="关注" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/no_data_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="invisible">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="11dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_main_list_no_data"
                app:riv_oval="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/main_list_no_data_2"
                android:textColor="@color/white"
                android:textSize="14dp" />


        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/img_123"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_list_1" />

</RelativeLayout>