<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:id="@+id/re_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/ic_ranking">

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:id="@+id/re_store"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/ic_shop"></RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_game"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/re_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/im_photo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="50dp" />

            <ImageView
                android:id="@+id/iv_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_ranking_one"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/re_two"
                android:layout_width="match_parent"
                android:layout_height="109dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/im_photo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="4dp" />

                <ImageView
                    android:id="@+id/iv_top2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_ranking_two"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_three"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:layout_marginTop="10dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/im_photo3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="4dp" />

                <ImageView
                    android:id="@+id/iv_top3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_ranking_three"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>