<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:background="@mipmap/bg_main_item_bottom"
    >

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:src="@mipmap/icon_live_close_2"
        app:tint="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/notification"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/global"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:text="@string/box_notification"
            android:paddingHorizontal="8dp"
            android:textSize="14sp"
            android:textStyle="bold"

            />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/box_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/global"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginBottom="24dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:text="@string/background_notification"
            android:paddingHorizontal="8dp"
            android:textSize="14sp"
            android:textStyle="bold"

            />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/back_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/global"
            />
    </LinearLayout>
</LinearLayout>